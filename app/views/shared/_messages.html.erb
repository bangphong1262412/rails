
<% unless flash.empty? %>

  <script>

    <% flash.each do |k, v| %>

      <% x = k.to_s.gsub('alert', 'error').gsub('notice', 'success') %>

      new Noty({
          type: '<%= x %>',
          layout: 'topRight',
          timeout: '3000',
          text: '<%= v %>',
          theme: 'sunset'
      }).show();
        
    <% end %>

  </script>
  
<% end %>

