
<section class="py-4">
  <div class="container">
    <div class="row">
      <!-- Left Column -->
      <div class="col-lg-5">
        <p class="subtitle mb-3">Add a pet for adoption</p>
        <h1 class="hello mb-3">Let's Do this</h1>
        <div>
          <p class="text-muted">shdjshfmgshdhh smdgshmfdg bsahmdfbmsb shdjshfmgshdhh smdgshmfdg bsahmdfbmsbshdjshfmgshdhh smdgshmfdg bsahmdfbmsbshdjshfmgshdhh smdgshmfdg bsahmdfbmsbshdjshfmgshdhh smdgshmfdg bsahmdfbmsb </p>
          
        </div>
      </div>
      <!-- RIght Column -->
      <div class="col-lg-7">
        <div class="form-group-row">
          <div class="mr-auto ml-auto align-items-center col-lg-8">
            <%= form_for @pet do |f| %>

              <div class="form-group">
                <label>Pet Name</label>
                <%= f.text_field :title, autocomplete: 'title', class: 'form-control', required: 'true' %>
              </div>

              <div class="form-group">
                <label>Choose Category</label>
                <%= f.select(:category_id, options_for_select(@categories.map{ |c| [c.name, c.id]}), { wraper: {} }, { class: 'custom-select mb-3'}) %>
              </div>



              <%= f.submit 'Save & Continue', class: 'btn btn-primary mt-3' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>